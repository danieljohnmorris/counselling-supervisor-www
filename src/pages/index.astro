---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ArrowRight, Brain, Check } from 'lucide-react';
import { Card, CardContent, CardFooter, CardHeader, CardTitle, CardDescription } from '../components/ui/card';
import { Button } from '../components/ui/button';
import { Input } from '../components/ui/input';
---

<BaseLayout pageTitle="counselling-supervisor.ai">
  <main class="flex-1">
    <!-- Hero Section -->
    <section class="w-full py-12 md:py-24 lg:py-32 xl:py-48 bg-gradient-to-b from-white to-gray-100 dark:from-gray-900 dark:to-gray-800">
      <div class="container px-4 md:px-6">
        <div class="flex flex-col items-center space-y-4 text-center">
          <div class="space-y-2">
            <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none">
              The World's First AI Counselling Supervisor
            </h1>
            <p class="mx-auto max-w-[700px] text-gray-500 md:text-xl dark:text-gray-400">
              Enhance your counselling practice with 24/7 AI-powered supervision, insights, and support.
            </p>
          </div>
          <div class="space-y-4 sm:space-y-0 sm:space-x-4">
            <Button size="lg" class="bg-primary text-primary-foreground hover:bg-primary/90">
              Get Started <ArrowRight className="ml-2 h-5 w-5" />
            </Button>
            <Button size="lg" variant="outline">Learn More</Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="w-full py-12 md:py-24 lg:py-32">
      <div class="container px-4 md:px-6">
        <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-center mb-8">
          Key Features
        </h2>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {[
            {
              title: "24/7 Availability",
              description: "Access supervision anytime, anywhere. Our AI never sleeps, ensuring you always have support."
            },
            {
              title: "Personalized Insights",
              description: "Receive tailored feedback and suggestions based on your unique counselling style and cases."
            },
            {
              title: "Ethical Guidance",
              description: "Navigate complex ethical dilemmas with AI-powered analysis based on established counselling standards."
            },
            {
              title: "Case Analysis",
              description: "Upload case notes for in-depth analysis, identifying patterns and suggesting intervention strategies."
            },
            {
              title: "Continuous Learning",
              description: "Stay updated with the latest counselling techniques and research, curated by our AI."
            },
            {
              title: "Performance Tracking",
              description: "Monitor your progress and growth as a counsellor with detailed analytics and reports."
            }
          ].map(feature => (
            <Card>
              <CardHeader>
                <CardTitle>{feature.title}</CardTitle>
              </CardHeader>
              <CardContent>
                <p>{feature.description}</p>
              </CardContent>
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- Pricing Section -->
    <section id="pricing" class="w-full py-12 md:py-24 lg:py-32 bg-gray-100 dark:bg-gray-800">
      <div class="container px-4 md:px-6">
        <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-center mb-8">
          Simple, Transparent Pricing
        </h2>
        <div class="max-w-2xl mx-auto">
          <Card class="w-full">
            <CardHeader>
              <CardTitle class="text-2xl">Professional Plan</CardTitle>
              <CardDescription>Everything you need for AI-powered counselling supervision</CardDescription>
            </CardHeader>
            <CardContent>
              <div class="text-center mb-4">
                <span class="text-4xl font-bold">$99</span>
                <span class="text-gray-500 dark:text-gray-400">/month</span>
              </div>
              <ul class="space-y-2">
                {[
                  "Advanced AI supervision",
                  "Unlimited case analyses",
                  "Daily performance insights",
                  "Ethical dilemma solver",
                  "24/7 AI support"
                ].map(feature => (
                  <li class="flex items-center">
                    <Check className="mr-2 h-4 w-4 text-green-500" />
                    {feature}
                  </li>
                ))}
              </ul>
            </CardContent>
            <CardFooter>
              <Button class="w-full">Start 14-Day Free Trial</Button>
            </CardFooter>
          </Card>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section id="cta" class="w-full py-12 md:py-24 lg:py-32">
      <div class="container px-4 md:px-6">
        <div class="flex flex-col items-center space-y-4 text-center">
          <div class="space-y-2">
            <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">
              Elevate Your Counselling Practice
            </h2>
            <p class="mx-auto max-w-[600px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed dark:text-gray-400">
              Join the future of counselling supervision. Start your free trial today and experience the power of AI-assisted growth.
            </p>
          </div>
          <div class="w-full max-w-sm space-y-2">
            <form class="flex space-x-2">
              <Input class="max-w-lg flex-1" placeholder="Enter your email" type="email" />
              <Button type="submit">Start Free Trial</Button>
            </form>
            <p class="text-xs text-gray-500 dark:text-gray-400">
              By signing up, you agree to our{" "}
              <a class="underline underline-offset-2" href="#">Terms & Conditions</a>
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
